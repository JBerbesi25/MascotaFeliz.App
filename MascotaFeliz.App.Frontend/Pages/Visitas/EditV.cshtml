@page
@model MascotaFeliz.App.Frontend.Pages.EditVModel
@{

}

<body
    style="background-image: url(/img/visitas.jpg);background-position: center center;background-repeat: no-repeat;background-size: cover;background-attachment: relative;">

    <div class="col-lg-4 col-md-6 border p-4 shadow rounded float-right mr-4 bg-white mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-10">
                @Html.Raw(@ViewData["Respuesta"])
            </div>
        </div>
        <div class="">
            <h3>Visitas</h3>
        </div>
        <form method="post">
            <input type="hidden" asp-for="Visita.Id" />
            <div class="form-group">
                <label asp-for="Visita.Veterinario"></label>
                <select class="form-control" name="veterinario" id="veterinario" asp-for="Visita.Veterinario">
                    @foreach (var veterinario in Model.Veterinarios)
                    {
                        <option value="@veterinario.Id">@veterinario.Nombres @veterinario.Apellidos</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="Visita.Veterinario"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visita.Mascota"></label>
                <select class="form-control" name="mascota" id="mascota" asp-for="Visita.Mascota">
                    @foreach (var mascota in Model.Mascotas)
                    {
                        <option value="@mascota.Id">@mascota.Nombre</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="Visita.Mascota"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visita.Fecha_hora"></label>
                <input asp-for="Visita.Fecha_hora" class="form-control">
                <span class="text-danger" asp-validation-for="Visita.Fecha_hora"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visita.Temperatura"></label>
                <input asp-for="Visita.Temperatura" class="form-control">
                <span class="text-danger" asp-validation-for="Visita.Temperatura"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visita.Peso"></label>
                <input asp-for="Visita.Peso" class="form-control">
                <span class="text-danger" asp-validation-for="Visita.Peso"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visita.FreCardiaca"></label>
                <input asp-for="Visita.FreCardiaca" class="form-control">
                <span class="text-danger" asp-validation-for="Visita.FreCardiaca"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visita.FreRespiratoria"></label>
                <input asp-for="Visita.FreRespiratoria" class="form-control">
                <span class="text-danger" asp-validation-for="Visita.FreRespiratoria"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visita.EstadoAnimo"></label>
                <input asp-for="Visita.EstadoAnimo" class="form-control">
                <span class="text-danger" asp-validation-for="Visita.EstadoAnimo"></span>
            </div>
             <div class="form-group">
                <label asp-for="Visita.Recomendaciones"></label>
                <input asp-for="Visita.Recomendaciones" class="form-control">
                <span class="text-danger" asp-validation-for="Visita.Recomendaciones"></span>
            </div>
            <div class="d-flex justify-content-between form-online">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-page="./ListV" class="btn btn-outline-primary">Volver</a>
            </div>
        </form>

    </div>
    <div class="mb-4"></div>

</body>
<script>
    document.getElementById("veterinario").value=@Model.Visita.Veterinario;
    document.getElementById("mascota").value=@Model.Visita.Mascota;
</script>

