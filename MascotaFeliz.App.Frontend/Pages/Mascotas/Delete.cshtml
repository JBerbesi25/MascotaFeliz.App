@page
@model MascotaFeliz.App.Frontend.Pages.DeleteMascotasModel
@{
}
<br />
<h2 class="text-info">Eliminar Mascotas: @Model.Mascota.Nombre</h2>
<div class="border">
    <form method="post">
        <input type="hidden" asp-for="Mascota.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container" style="padding: 50px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Mascota.Nombre"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Mascota.Nombre" class="form-control">
                    </div>
                    <span class="textdanger" asp-validation-for="Mascota.Nombre"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <!--<div class="col-sm-2">
                        <label asp-for="Mascota.Propietario"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Mascota.Propietario" class="form-control">
                    </div>
                    <span class="textdanger" asp-validation-for="Mascota.Propietario"></span>
                </div>-->
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Mascota.Especie"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Mascota.Especie" class="form-control">
                    </div>
                    <span class="textdanger" asp-validation-for="Mascota.Especie"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Mascota.Raza"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Mascota.Raza" class="form-control">
                    </div>
                    <span class="textdanger" asp-validation-for="Mascota.Raza"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <button type="submit" class="btn btn-primary form-control">Eliminar</button>
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="./List" class="btn btn-success form-control">Volver</a>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>