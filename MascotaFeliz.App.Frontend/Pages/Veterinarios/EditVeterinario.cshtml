@page
@model MascotaFeliz.App.Frontend.Pages.EditVeterinarioModel
@{

}
<body
    style="background-image: url(/img/veterinario.jpg);background-position: center center;background-repeat: no-repeat;background-size: 100%;background-attachment: relative;">

    <div class="col-lg-4 col-md-6 border p-4 shadow rounded float-right mr-4 bg-white mb-5">
        <div class="row d-flex justify-content-center">
            <div class="col-10">
                @Html.Raw(@ViewData["Respuesta"])
            </div>
        </div>
        <div class="">
            <h3>veterinario</h3>
        </div>
        <form method="post">
            <input type="hidden" asp-for="Veterinarios.Id" />
            <div class="form-group">
                <label asp-for="Veterinarios.Identificacion"></label>
                <input asp-for="Veterinarios.Identificacion" class="form-control" placeholder="">
                <span class="text-danger" asp-validation-for="Veterinarios.Identificacion"></span>
            </div>
            <div class="form-group">
                <label asp-for="Veterinarios.Nombres"></label>
                <input asp-for="Veterinarios.Nombres" class="form-control">
                <span class="text-danger" asp-validation-for="Veterinarios.Nombres"></span>
            </div>
            <div class="form-group">
                <label asp-for="Veterinarios.Apellidos"></label>
                <input asp-for="Veterinarios.Apellidos" class="form-control">
                <span class="text-danger" asp-validation-for="Veterinarios.Apellidos"></span>
            </div>
            <div class="form-group">
                <label asp-for="Veterinarios.Direccion"></label>
                <input asp-for="Veterinarios.Direccion" class="form-control">
                <span class="text-danger" asp-validation-for="Veterinarios.Direccion"></span>
            </div>
            <div class="form-group">
                <label asp-for="Veterinarios.Telefono"></label>
                <input asp-for="Veterinarios.Telefono" class="form-control">
                <span class="text-danger" asp-validation-for="Veterinarios.Telefono"></span>
            </div>
            <div class="form-group">
                <label asp-for="Veterinarios.TarjetaProfesional"></label>
                <input asp-for="Veterinarios.TarjetaProfesional" class="form-control">
                <span class="text-danger" asp-validation-for="Veterinarios.TarjetaProfesional"></span>
            </div>
            <div class="d-flex justify-content-between form-online">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-page="./ListVeterinario" class="btn btn-outline-primary">Volver</a>
            </div>            
        </form>
        
    </div>
    <div class="mb-4"></div>

</body>  
