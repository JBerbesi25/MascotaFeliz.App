@page
@model MascotaFeliz.App.Frontend.Pages.EditVeterinarioModel
@{
    int veterinarioId=Model.Veterinarios.Id;
}
<br />
<h2 class="text-info">Editar Veterinario: @Model.Veterinarios.Nombres</h2>
<div class="border">
    <form method="post">
        <input type="hidden" asp-for="Veterinarios.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container" style="padding: 50px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Veterinarios.Identificacion"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Veterinarios.Identificacion" class="form-control">
                    </div>
                    <span class="textdanger" asp-validation-for="Veterinarios.Identificacion"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Veterinarios.Nombres"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Veterinarios.Nombres" class="form-control">
                    </div>
                    <span class="textdanger" asp-validation-for="Veterinarios.Nombres"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Veterinarios.Apellidos"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Veterinarios.Apellidos" class="form-control">
                    </div>
                    <span class="textdanger" asp-validation-for="Veterinarios.Apellidos"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Veterinarios.Telefono"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Veterinarios.Telefono" class="form-control">
                    </div>
                    <span class="textdanger" asp-validation-for="Veterinarios.Telefono"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Veterinarios.Direccion"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Veterinarios.Direccion" class="form-control">
                    </div>
                    <span class="textdanger" asp-validation-for="Veterinarios.Direccion"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Veterinarios.TarjetaProfesional"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Veterinarios.TarjetaProfesional" class="form-control">
                    </div>
                    <span class="textdanger" asp-validation-for="Veterinarios.TarjetaProfesional"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <button type="submit" class="btn btn-primary form-control">Guardar</button>
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="./ListVeterinario" class="btn btn-success form-control">Lista de Veterinario</a>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>
