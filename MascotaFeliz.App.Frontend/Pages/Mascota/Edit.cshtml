@page
@model MascotaFeliz.App.Frontend.Pages.EditModel
@{
}
<h2>Edicion de las Mascotas: @Model.Mascota.Nombre</h2>
<form method="post">
    <div class="form-group">
        <label asp-for="Mascota.Nombre"></label>
        <input asp-for="Mascota.Nombre" class ="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Mascota.Propietario"></label>
        <input asp-for="Mascota.Propietario" class ="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Mascota.Especie"></label>
        <input asp-for="Mascota.Especie" class ="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Mascota.Raza"></label>
        <input asp-for="Mascota.Raza" class ="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
<a asp-page="./List" class="btn-default">Lista de Mascotas</a>
