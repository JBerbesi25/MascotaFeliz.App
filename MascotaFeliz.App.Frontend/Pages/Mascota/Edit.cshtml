@page
@model MascotaFeliz.App.Frontend.Pages.EditModelM
@{
    int mascotaId=Model.Mascota.Id;
}
<h2>Edicion de las Mascotas: @Model.Mascota.Nombre</h2>
<form method="post">
    <input type="hidden" asp-for="Mascota.Id"/>
    <div class="form-group">
        <label asp-for="Mascota.Nombre"></label>
        <input asp-for="Mascota.Nombre" class ="form-control">
        <span class="textdanger" asp-validation-for="Mascota.Nombre"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mascota.Propietario"></label>
        <input asp-for="Mascota.Propietario" class ="form-control">
        <span class="textdanger" asp-validation-for="Mascota.Propietario"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mascota.Especie"></label>
        <input asp-for="Mascota.Especie" class ="form-control">
        <span class="textdanger" asp-validation-for="Mascota.Especie"></span>
    </div>
    <div class="form-group">
        <label asp-for="Mascota.Raza"></label>
        <input asp-for="Mascota.Raza" class ="form-control">
        <span class="textdanger" asp-validation-for="Mascota.Raza"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
<a asp-page="./List" class="btn-default">Lista de Mascotas</a>
