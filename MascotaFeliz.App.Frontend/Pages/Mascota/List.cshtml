@page
@model MascotaFeliz.App.Frontend.ListModel
@{
}
<h1 class="mascotas">Mascotas Afiliadas</h1>

<table class="table">
    <tr>
        <td>
            <h4>Id</h4>
        </td>
        <td>
            <h4>Nombre Mascota</h4>
        </td>
        <td>
            <h4>Propietario</h4>
        </td>
        <td>
            <h4>Especie</h4>
        </td>
        <td>
            <h4>Raza</h4>
        </td>
        <td>
            <h4>Detalles</h4>
        </td>
        <td>
            <h4>Editar</h4>
        </td>
    </tr>
    @foreach (var mascota in Model.Mascotas)
    {
        <tr>
            <td>
                @mascota.Id
            </td>
            <td>
                @mascota.Nombre
            </td>
            <td>
                @mascota.Propietario
            </td>
            <td>
                @mascota.Especie
            </td>
            <td>
                @mascota.Raza
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Details" asp-route-mascotaId="@mascota.Id">
                    <i class="fas fa-info-circle"></i>
                    Detalle de Mascota
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./Edit" asp-route-mascotaId="@mascota.Id">
                    <i class="fas fa-address-book fa-lg" aria-hidden="true"></i>
                    Editar
                </a>
            </td>
        </tr>
    }

</table>

<a asp-page=".\Edit" class="btn btn-primary">Crear Mascota</a>